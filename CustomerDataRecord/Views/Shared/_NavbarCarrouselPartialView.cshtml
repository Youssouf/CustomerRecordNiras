<!--Carousel Section-->


<div id="myCarousel" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/Images/Pdm_register.jpg" style="width:100%" class="img-responsive">
            <div class="container">
                <div class="carousel-caption">
                    <h1>PDM Register</h1>                    
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/Images/Pdm2.jpg" class="img-responsive">
            <div class="container">
                <div class="carousel-caption">
                    <h1>PDM Products Example</h1>
                   
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/Images/header_2.jpg" class="img-responsive">
            <div class="container">
                <div class="carousel-caption">
                    <h1>PDM Header Image</h1>                   
                </div>
            </div>
        </div>
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span> <!-- we can also use "icon-prev"-->
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span> <!-- we can also use "icon-next"-->
    </a>
</div>


