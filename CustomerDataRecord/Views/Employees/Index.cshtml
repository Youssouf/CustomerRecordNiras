@model IEnumerable<CustomerDataRecord.Models.Employees>


<p>
    <div id="empdetails"> </div>
</p>

<div class="container">

<div class="tablecenter">

    <h2 class="thcenter"> Employees List </h2>
    <p>
        <span>
            <a href="@Url.Action("Create")" class="btn btn-primary">

                <span class="glyphicon glyphicon-user"></span> Register Employee
            </a>

        </span>
    </p>
    <table class="table table-striped table-hover  table-responsive cell-border  table-bordered" id="myTable">
        <thead>
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.DepName)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>*@
               
                <th>
                    @Html.DisplayNameFor(model => model.Coountry)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Photo)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Company.CompanyName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.DepName)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                  
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>*@
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.Coountry)
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.Company.CompanyName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
                    
                        @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })|

                        @Ajax.ActionLink("View Details", "GetEmployeeDetails", new { id = item.EmployeeID }, new AjaxOptions
       {
           HttpMethod = "POST",
           UpdateTargetId = "empdetails",
           InsertionMode = InsertionMode.Replace
       })
                    </td>
                </tr>
            }
        </tbody>

    </table>
    </div>
    </div>
